<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@drawable/homebg3"
	android:padding="10dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:text="Game Statistics"
	    android:textColor="#FFF"
	    android:textSize="25dp"
	    android:padding="5dp"
	    android:gravity="center"
	    android:layout_gravity="center_horizontal"
	    android:background="@drawable/roughlabel"
	    android:shadowColor="#FEE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textNick"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingLeft="10sp"
            android:shadowColor="#FEE"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:paddingBottom="10dp"
            android:text="Howdy"
            android:textColor="#652100"
            android:textSize="20sp" />
            <!-- 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="Nick: XYZ"
            android:textColor="#652100"
            android:textSize="20dp"
			android:layout_gravity="right"
			 -->

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/textPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gold collected: 0"
		android:padding="5dp"
		android:textColor="#652100"
		android:textSize = "20dp"

    />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/textPerc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tasks Completed: 0/7"
		android:padding="5dp"
		android:textColor="#652100"
		android:textSize = "20dp"

    />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/textRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Global Rank: (Loading)"
		android:padding="5dp"
		android:textColor="#652100"
		android:textSize = "20dp"

    />
    </LinearLayout>

</LinearLayout>